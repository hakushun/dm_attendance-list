{
	"hosting": {
		"headers": [
			{
				"source": "/*",
				"headers": [
					{
						"key": "Access-Control-Allow-Origin",
						"value": "https://fir-attendance-list.web.app/"
					},
					{
						"key": "Vary",
						"value": "Origin"
					},
					{
						"key": "X-Content-Type-Options",
						"value": "nosniff"
					},
					{
						"key": "X-Frame-Options",
						"value": "SAMEORIGIN"
					},
					{
						"key": "Content-Security-Policy",
						"value": "default-src 'self' *.firebaseio.com; font-src fonts.gstatic.com; style-src 'self' fonts.googleapis.com 'unsafe-inline'; frame-ancestors 'self' *.firebaseio.com; connect-src 'self' https://*.googleapis.com wss://*.firebaseio.com; object-src 'none'; base-uri 'none';"
					},
					{
						"key": "Referrer-Policy",
						"value": "strict-origin-when-cross-origin"
					},
					{
						"key": "Cross-Origin-Opener-Policy",
						"value": "same-origin"
					},
					// {
					// 	"key": "Cross-Origin-Embedder-Policy",
					// 	"value": "require-corp"
					// },
					{
						"key": "Cache-Control",
						"value": "private"
					},
					{
						"key": "Cross-Origin-Resource-Policy",
						"value": "cross-origin"
					}
				]
			},
			{
				"source": "**/*.@(js)",
				"headers": [
					{
						"key": "Access-Control-Allow-Origin",
						"value": "https://fir-attendance-list.web.app/"
					},
					{
						"key": "Vary",
						"value": "Origin"
					},
					{
						"key": "X-Content-Type-Options",
						"value": "nosniff"
					},
					{
						"key": "X-Frame-Options",
						"value": "SAMEORIGIN"
					},
					{
						"key": "Content-Security-Policy",
						"value": "default-src 'self' *.firebaseio.com; font-src fonts.gstatic.com; style-src 'self' fonts.googleapis.com 'unsafe-inline'; connect-src 'self' https://*.googleapis.com fonts.gstatic.com; frame-ancestors 'self' *.firebaseio.com; object-src 'none'; base-uri 'none';"
					},
					{
						"key": "Referrer-Policy",
						"value": "strict-origin-when-cross-origin"
					},
					{
						"key": "Cross-Origin-Opener-Policy",
						"value": "same-origin"
					},
					{
						"key": "Cross-Origin-Embedder-Policy",
						"value": "require-corp"
					},
					{
						"key": "Cache-Control",
						"value": "private, max-age=259200"
					},
					{
						"key": "Cross-Origin-Resource-Policy",
						"value": "cross-origin"
					}
				]
			},
			{
				"source": "**/*.@(ico)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "private, max-age=259200"
					}
				]
			}
		],
		"site": "fir-attendance-list",
		"public": "dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/api/**",
				"function": "api"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	}
}
